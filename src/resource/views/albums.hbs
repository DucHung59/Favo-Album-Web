<div class="mt-4 ml-4">
    <div class="row">
        {{#each albums}}
        <div class="col-sm-6 col-lg-3">
            <div class="card mt-4">
                <a href="/album/{{this.slug}}">
                    <img src="{{this.img}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="/album/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/album/{{this.slug}}" class="btn btn-primary">Nghe</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>